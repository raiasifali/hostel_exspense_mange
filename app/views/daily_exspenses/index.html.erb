<p id="notice"><%= notice %></p>

<h1>Daily Exspenses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Totalamount</th>
      <th>Time</th>
      <th>Creaded by</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exspenses.each do |daily_exspense| %>
      <tr>
        <td><%= daily_exspense.description %></td>
        <td><%= daily_exspense.totalamount %></td>
        <td><%= daily_exspense.time %></td>
        <td><%= daily_exspense.creaded_by %></td>
        <td><%= daily_exspense.status %></td>
        <td><%= link_to 'Show', daily_exspense %></td>
        <td><%= link_to 'Edit', edit_daily_exspense_path(daily_exspense) %></td>
        <td><%= link_to 'Destroy', daily_exspense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

