<% content_for :page_title, "Daily Exspenses"  %>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Totalamount</th>
      <th>Time</th>
      <th>Creaded by</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exspenses.each do |daily_exspense| %>
      <tr>
        <td><%= daily_exspense.description %></td>
        <td><%= daily_exspense.totalamount %></td>
        <td><%= daily_exspense.time %></td>
        <td><%= daily_exspense.creaded_by %></td>
        <td><%= daily_exspense.status %></td>
        <td><%= link_to 'Show', daily_exspense,class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_daily_exspense_path(daily_exspense),class:'btn btn-info' %></td>
        <td><%= link_to 'Destroy', daily_exspense, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Exspense', new_daily_exspense_path ,class:'btn btn-success'%>
