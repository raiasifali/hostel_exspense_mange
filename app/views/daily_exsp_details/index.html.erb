<p id="notice"><%= notice %></p>

<h1>Daily Exsp Details</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Daily exspenses</th>
      <th>Amount</th>
      <th>Is paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exsp_details.each do |daily_exsp_detail| %>
      <tr>
        <td><%= daily_exsp_detail.user_id %></td>
        <td><%= daily_exsp_detail.daily_exspenses_id %></td>
        <td><%= daily_exsp_detail.amount %></td>
        <td><%= daily_exsp_detail.is_paid %></td>
        <td><%= link_to 'Show', daily_exsp_detail %></td>
        <td><%= link_to 'Edit', edit_daily_exsp_detail_path(daily_exsp_detail) %></td>
        <td><%= link_to 'Destroy', daily_exsp_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

