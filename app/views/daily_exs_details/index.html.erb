<p id="notice"><%= notice %></p>

<h1>Daily Exs Details</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exs_details.each do |daily_exs_detail| %>
      <tr>
        <td><%= daily_exs_detail.user_id %></td>
        <td><%= daily_exs_detail.amount %></td>
        <td><%= link_to 'Show', daily_exs_detail %></td>
        <td><%= link_to 'Edit', edit_daily_exs_detail_path(daily_exs_detail) %></td>
        <td><%= link_to 'Destroy', daily_exs_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

