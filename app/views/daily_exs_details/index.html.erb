<% content_for :page_title, "Daily Exs Details"  %>
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Daily Exspenses</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exs_details.each do |daily_exs_detail| %>
      <tr>
        <% @userr=@user.find(daily_exs_detail.user_id)%>
        <td><%=  @userr.name%></td>
        <td><%= daily_exs_detail.daily_exspense_id %></td>
        <td><%= daily_exs_detail.amount %></td>
        <td><%= link_to 'Show', daily_exs_detail ,class:'btn btn-success'%></td>
        <td><%= link_to 'Edit', edit_daily_exs_detail_path(daily_exs_detail) ,class:'btn btn-info'%></td>
        <td><%= link_to 'Destroy', daily_exs_detail, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Exs Detail', new_daily_exs_detail_path ,class:'btn btn-success'%>
